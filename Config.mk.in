LIBNAME		= @LIBNAME@
MAJOR		= @LIB_MAJOR@
MINOR		= @LIB_MINOR@
BUILD		= @LIB_BUILD@

CXX		= @CXX@ 
LD		= @CXX@ 
AR		= @AR@
RANLIB		= @RANLIB@
INSTALL		= @INSTALL@
RM		= @RM@
LN		= @LN@

prefix		= @prefix@
exec_prefix	= @exec_prefix@
INCDIR		= @includedir@
LIBDIR		= @libdir@
BINDIR		= @bindir@

INSTALLDIR	= ${INSTALL} -d
INSTALLLIB	= ${INSTALL} -p -m 644
INSTALLBIN	= ${INSTALL} -s -p -m 755
INSTALLDATA	= ${INSTALL} -p -m 644

CWARNOPTS	= -Werror -Wall -W -Winline -Wpointer-arith -Wno-cast-align \
		-Wcast-qual -Wwrite-strings -Wshadow -Wredundant-decls @SYSWARNS@
CXXWARNOPTS	= ${CWARNOPTS} -Wconversion -Wsign-promo -Wsynth -Woverloaded-virtual \
		-fno-enforce-eh-specs -fno-threadsafe-statics
OPTIMIZATION	= @INLINE_OPTS@@PROCESSOR_OPTS@ 

#BUILD_SHARED	= 1
#BUILD_STATIC	= 1
#DEBUG		= 1
CXXFLAGS	= @CXXFLAGS@ ${CXXWARNOPTS} -I ${INCDIR} -nodefaultlibs
LDFLAGS		= @LDFLAGS@  -L ${LIBDIR} -nodefaultlibs
ifdef DEBUG
    CXXFLAGS	+= -O0 -g
else
    CXXFLAGS	+= -Os -DNDEBUG=1 -fomit-frame-pointer ${OPTIMIZATION}
    LDFLAGS	+= -s
endif
SHBLDFL		= @SHBLDFL@

LIBA		= lib${LIBNAME}.a
LIBSO		= lib${LIBNAME}.so
ifdef MAJOR
LIBSOLNK	= ${LIBSO}.${MAJOR}
LIBSOBLD	= ${LIBSO}.${MAJOR}.${MINOR}.${BUILD}
endif
TOCLEAN		+= ${LIBSO} ${LIBA} ${LIBSOBLD}

