LIBNAME		= @LIBNAME@
MAJOR		= @LIB_MAJOR@
MINOR		= @LIB_MINOR@
BUILD		= @LIB_BUILD@

CXX		= @CXX@ 
LD		= @CC@ 
AR		= @AR@
RANLIB		= @RANLIB@
INSTALL		= @INSTALL@
RM		= @RM@
LN		= @LN@

prefix		= @prefix@
exec_prefix	= @exec_prefix@
INCDIR		= @includedir@
LIBDIR		= @libdir@
BINDIR		= @bindir@

INSTALLDIR	= ${INSTALL} -d
INSTALLLIB	= ${INSTALL} -p -m 644
INSTALLBIN	= ${INSTALL} -s -p -m 755
INSTALLDATA	= ${INSTALL} -p -m 644

CXXWARNOPTS	= -Werror -Wall -W -Winline -Wpointer-arith -Wno-cast-align \
		-Wcast-qual -Wwrite-strings -Wsign-promo -Wredundant-decls \
		-Wshadow -Woverloaded-virtual @SYSWARNS@ \
		-fno-enforce-eh-specs -fno-threadsafe-statics
OPTIMIZATION	= @INLINE_OPTS@@PROCESSOR_OPTS@ 

#BUILD_SHARED	= 1
#BUILD_STATIC	= 1
#DEBUG		= 1
CXXFLAGS	= ${CXXWARNOPTS} -I ${INCDIR} -fPIC
LDFLAGS		= @LDFLAGS@ -L ${LIBDIR} -fPIC
ifdef DEBUG
    CXXFLAGS	+= -O0 -g
else
    CXXFLAGS	+= -O3 -DNDEBUG=1 ${OPTIMIZATION}
    LDFLAGS	+= -s
endif
SHBLDFL		= @SHBLDFL@

LIBA		= lib${LIBNAME}.a
LIBSO		= lib${LIBNAME}.so
ifdef MAJOR
LIBSOLNK	= ${LIBSO}.${MAJOR}
LIBSOBLD	= ${LIBSO}.${MAJOR}.${MINOR}.${BUILD}
endif
TOCLEAN		+= ${LIBSO} ${LIBA} ${LIBSOBLD}

